<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/root_layout_add_dog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/dogs_name" />

            <EditText
                android:id="@+id/et_dogs_name"
                style="@style/style_text_medium"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/gender" />

            <Spinner
                android:id="@+id/sp_gender"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/array_gender"
                android:spinnerMode="dropdown" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/dob" />

            <EditText
                android:id="@+id/et_dd"
                style="@style/style_text_medium"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:hint="dd"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="/" />

            <EditText
                android:id="@+id/et_mm"
                style="@style/style_text_medium"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="/" />

            <EditText
                android:id="@+id/et_yy"
                style="@style/style_text_medium"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:hint="yyyy"
                android:inputType="number"
                android:maxLength="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/age" />

            <EditText
                android:id="@+id/et_age_yy"
                style="@style/style_text_medium"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:hint="yy"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="/" />

            <EditText
                android:id="@+id/et_age_mm"
                style="@style/style_text_medium"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:inputType="number"
                android:maxLength="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/breed_type" />

            <Spinner
                android:id="@+id/sp_breed_type"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/array_breed_type"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/breed" />

            <Spinner
                android:id="@+id/sp_breed"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/weight" />

            <EditText
                android:id="@+id/et_weight"
                style="@style/style_text_medium"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="kgs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/height" />

            <EditText
                android:id="@+id/et_height"
                style="@style/style_text_medium"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="cms" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/coat_color" />

            <AutoCompleteTextView
                android:id="@+id/et_color"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/coat_pattern" />

            <AutoCompleteTextView
                android:id="@+id/et_coat_pattern"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/description" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/listing_type" />

            <Spinner
                android:id="@+id/sp_listing_types"
                style="@style/style_text_medium"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/array_listing_type"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/price" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/symbol_rs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/microchip_number" />

            <EditText
                android:id="@+id/et_microchip_number"
                android:layout_width="@dimen/width_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_birth_certificate"
                style="@style/style_text_medium"
                android:layout_width="@dimen/dim_image_thumbnail"
                android:layout_height="@dimen/dim_image_thumbnail"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_place_holder_image" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/birth_certificate_upload"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_vaccination_certificate"
                style="@style/style_text_medium"
                android:layout_width="@dimen/dim_image_thumbnail"
                android:layout_height="@dimen/dim_image_thumbnail"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_place_holder_image" />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/vaccination_certificate_upload" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_health_history"
                style="@style/style_text_medium"
                android:layout_width="@dimen/dim_image_thumbnail"
                android:layout_height="@dimen/dim_image_thumbnail"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_place_holder_image"
                />

            <TextView
                style="@style/style_text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/health_history_upload" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

